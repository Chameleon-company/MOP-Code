<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/mainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/serene_background_overlay">

    <!--Header: Description Only -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#66000000"
        android:paddingTop="20dp"
        android:paddingBottom="10dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:gravity="center_horizontal"
        android:elevation="3dp">

        <TextView
            android:id="@+id/descriptionText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ¤– CounselChat â€“ Your private AI companion for emotional support, available anytime."
            android:textColor="#E0E0E0"
            android:textSize="13sp"
            android:gravity="center"
            android:fontFamily="sans-serif" />
    </LinearLayout>

    <!--Suggestion Chips -->
    <com.google.android.material.chip.ChipGroup
        android:id="@+id/suggestionChips"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:layout_marginBottom="6dp"
        android:layout_marginTop="6dp"
        android:layout_gravity="center_horizontal"
        app:singleLine="false"
        app:singleSelection="false"
        android:gravity="center_horizontal" />

    <!--Chat History -->
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:id="@+id/chatHistory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp" />
    </ScrollView>

    <!--Typing Indicator -->
    <TextView
        android:id="@+id/typingIndicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ðŸ¤– Bot is typing..."
        android:visibility="gone"
        android:textStyle="italic"
        android:padding="8dp"
        android:textColor="#CCCCCC" />

    <!-- Mic and Reset Chat Row -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="6dp">

        <ImageButton
            android:id="@+id/micButton"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@android:color/transparent"
            android:src="@android:drawable/ic_btn_speak_now"
            android:contentDescription="Voice Input"
            app:tint="#FFFFFF" />

        <Button
            android:id="@+id/resetChatButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reset Chat"
            android:textColor="#FFFFFF"
            android:backgroundTint="#444444"
            android:layout_marginStart="16dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:elevation="2dp"
            android:fontFamily="sans-serif-medium" />
    </LinearLayout>

    <!-- Listening Status (optional) -->
    <TextView
        android:id="@+id/listeningIndicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ðŸŽ¤ Listening..."
        android:visibility="gone"
        android:textColor="#E0E0E0"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:paddingBottom="6dp"
        android:textStyle="italic" />

    <!--Input + Send -->
    <LinearLayout
        android:id="@+id/inputLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp">

        <EditText
            android:id="@+id/inputMessage"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Type your message..."
            android:background="@drawable/edit_text_bg"
            android:textColor="#FFFFFF"
            android:textColorHint="#CCFFFFFF"
            android:padding="12dp"
            android:textSize="15sp"
            android:fontFamily="sans-serif" />

        <Button
            android:id="@+id/sendButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SEND"
            android:background="@drawable/send_button_bg"
            android:textColor="#FFFFFF"
            android:layout_marginStart="8dp"
            android:elevation="2dp"
            android:paddingLeft="18dp"
            android:paddingRight="18dp"
            android:fontFamily="sans-serif-medium" />
    </LinearLayout>

    <!--Long Response Toggle -->
    <com.google.android.material.switchmaterial.SwitchMaterial
        android:id="@+id/responseToggle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Long Response"
        android:textColor="#E0E0E0"
        android:layout_gravity="center_horizontal"
        android:padding="8dp"
        android:fontFamily="sans-serif" />
</LinearLayout>
